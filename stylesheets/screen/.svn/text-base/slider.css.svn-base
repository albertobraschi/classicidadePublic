#slider  ul,
#slider  li,
#slider  img {
list-style: none;
margin: 0; padding: 0;
}

#slider {
   width: 520px; /* important to be same as image width */
   height: 90px; /* important to be same as image height */
   position: relative; /* important */
   overflow: hidden; /* important */
}

#sliderContent {
   width: 520px; /* important to be same as image width or wider */
   position: absolute; /* important */
   top: 0; /* important */
   margin-left: 0; /* important */
}

.sliderImage {
   float: left; /* important */
   position: relative; /* important */
   display: none; /* important */
}

.sliderImage span {
   position: absolute; /* important */
   padding: 10px 13px;
   width: 520px; /* width of image minus left and right padding. Needed for IE */
   background-color: #000;
   filter: alpha(opacity=70); /* here you can set the opacity of box with text */
   -moz-opacity: 0.7; /* here you can set the opacity of box with text */
   -khtml-opacity: 0.7; /* here you can set the opacity of box with text */
   opacity: 0.7; /* here you can set the opacity of box with text */
   color: #fff;
   display: none; /* important */
   left: 0;
   bottom: 0;
   font-size: 130%;
   font-weight: bold;
}

.clear {
   clear: both;
} 